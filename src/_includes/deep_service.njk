{% set svc = services[service] %}
<div class="card service-card-embed" id="{{ service }}">
  <div class="service-header">
    <h3><a href="/services/{{ svc.slug }}/">{{ svc.name }}</a> ‚Äî From ${{ svc.from }}</h3>
    <a href="/services/{{ svc.slug }}/" class="service-link">View full {{ svc.name | lower }} service details ‚Üí</a>
  </div>
  <p class="small">Final price depends on model and inspection. <a href="tel:0400454859">Call for a free phone estimate</a>.</p>
  <div class="badges">
    <span class="badge">‚è±Ô∏è {{ svc.turnaround }}</span>
    <span class="badge">‚úì 12‚Äëmonth warranty</span>
    <span class="badge">üîß Workshop repair</span>
  </div>
  <div class="service-details-grid">
    <div class="box symptoms-box">
      <h4>Common Problems We Fix</h4>
      <ul class="symptoms-list">
        {% for s in svc.symptoms %}
        <li>{{ s }}</li>
        {% endfor %}
      </ul>
    </div>
    <div class="box process-box">
      <h4>Our Repair Process</h4>
      <ol class="process-list">
        {% for w in svc.what %}
        <li>{{ w }}</li>
        {% endfor %}
      </ol>
    </div>
  </div>
  <p class="cta-row">
    <a class="btn" href="/services/{{ svc.slug }}/">View {{ svc.name }} Details</a>
    <a class="btn" href="/pages/booking.html">Book {{ svc.shortName }} Repair</a>
    <a class="btn ghost-dark" href="tel:0400454859">Call 0400 454 859</a>
  </p>
</div>

<style>
.service-card-embed {
  margin-bottom: 1.5rem;
}
.service-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  flex-wrap: wrap;
  gap: 0.5rem;
}
.service-header h3 {
  margin: 0;
}
.service-header h3 a {
  color: inherit;
  text-decoration: none;
}
.service-header h3 a:hover {
  color: #FF7A00;
}
.service-link {
  color: #FF7A00;
  font-weight: 600;
  font-size: 0.9rem;
  text-decoration: none;
}
.service-link:hover {
  text-decoration: underline;
}
.badges {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin: 0.75rem 0;
}
.cta-row {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin-top: 1rem;
}
.btn.ghost-dark {
  background: transparent;
  border: 2px solid #1a365d;
  color: #1a365d;
}
.service-details-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
  margin-top: 1rem;
}
@media (max-width: 600px) {
  .service-details-grid {
    grid-template-columns: 1fr;
  }
}
.symptoms-list, .process-list {
  margin: 0;
  padding-left: 1.25rem;
}
.symptoms-list li, .process-list li {
  margin-bottom: 0.35rem;
  line-height: 1.4;
}
.symptoms-box h4, .process-box h4 {
  margin: 0 0 0.75rem;
  color: #1a365d;
  font-size: 1rem;
}
</style>
